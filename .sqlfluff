[sqlfluff]
templater = dbt
dialect = postgres
exclude_rules = L034
max_line_length = 88

[sqlfluff:templater:dbt]
project_dir = dbt/
profiles_dir = dbt/
profile = f1warehouse_duckdb
target = dev

[sqlfluff:rules]
unquoted_identifiers_policy = all

[sqlfluff:indentation]
tab_space_size = 4
indent_unit = space

[sqlfluff:layout:type:comma]
line_position = leading

[sqlfluff:rules:L010]
# Keywords
capitalisation_policy = upper

[sqlfluff:rules:L014]
extended_capitalisation_policy = lower

[sqlfluff:rules:L030]
# Function names
capitalisation_policy = upper

[sqlfluff:rules:L040]
# Null & Boolean Literals
capitalisation_policy = upper
